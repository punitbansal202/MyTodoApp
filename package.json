{
  "name": "mytodoapp",
  "version": "1.0.0",
  "description": "Todo app for users",
  "main": "server.js",
  "scripts": {
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
